<div class="container mt-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Stt</th>
        <th scope="col">Name</th>
        <th scope="col">Created At</th>
        <th scope="col" colspan="2">Deleted At</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.createdAt}}</td>
          <td>{{this.deletedAt}}</td>
          <td><a href="/courses/{{this._id}}/restore">Restore</a>
          </td>
      {{/each}}
    </tbody>

  </table>
  <a href="/my/stored/courses"><i class="fa-solid fa-beat" style="color: #49a835;">Back To List</i></a>

</div>